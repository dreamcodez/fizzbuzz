#!/System/Library/Frameworks/Ruby.framework/Versions/1.8/usr/bin/ruby
#
# This file was generated by RubyGems.
#
# The application 'vagrant' is installed as part of a gem, and
# this file is here to facilitate running it.
#

require 'rubygems'

#XXX: HACK to break out of dependency hell, overriding normal vagrant bin
# basically, virtualbox requires a certain version of a share lib which veewee also does
# but once virtualbox is loaded, then the version is locked in, and veewee doesn't mind
# using virtualboxes preferred version... UGH...
require 'virtualbox'

version = ">= 0"

if ARGV.first =~ /^_(.*)_$/ and Gem::Version.correct? $1 then
  version = $1
  ARGV.shift
end

gem 'vagrant', version
load Gem.bin_path('vagrant', 'vagrant', version)
